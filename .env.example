# ModelScope API Key
MODELSCOPE_API_KEY=your-modelscope-api-key

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key

# 自定义OpenAI兼容接口配置
# 可以配置多个不同的API接口
CUSTOM_API_KEY_1=your-custom-api-key-1
CUSTOM_BASE_URL_1=https://api.your-service.com/v1
CUSTOM_MODEL_NAME_1=your-model-name-1

CUSTOM_API_KEY_2=your-custom-api-key-2
CUSTOM_BASE_URL_2=https://api.another-service.com/v1
CUSTOM_MODEL_NAME_2=your-model-name-2

# Semantic Scholar API Key
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs  # 日志目录
LOG_FILE=logs/scholarmind.log  # 主日志文件

# 模型可用性测试开关
ENABLE_MODEL_AVAILABILITY_TEST=true
MODEL_TEST_TIMEOUT=10

# ==================== 处理配置 ====================
# PDF解析配置
MAX_PDF_SIZE=52428800  # 50MB in bytes
PDF_PARSE_TIMEOUT=30  # seconds

# 文本处理配置
MAX_TEXT_LENGTH=100000  # characters
CHUNK_SIZE=5000  # characters

# 并行处理配置
MAX_WORKERS=4
PARALLEL_TIMEOUT=300  # seconds

# ==================== 输出配置 ====================
# 报告生成路径
REPORT_TEMPLATE_DIR=prompts/templates
OUTPUT_DIR=outputs

# 默认报告格式 (markdown, html, pdf)
DEFAULT_REPORT_FORMAT=markdown

# 默认输出语言 (zh, en)
DEFAULT_OUTPUT_LANGUAGE=zh

# ==================== 缓存配置 ====================
ENABLE_CACHE=true
CACHE_TTL=3600  # seconds (1 hour)
CACHE_DIR=.cache
MAX_CACHE_SIZE=1000  # MB
